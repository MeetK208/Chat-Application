<%- include('layouts/header.ejs', {logoutRoute: logoutRoute, homeRoute: homeRoute}); %>

<h1>Login</h1>

<% if (typeof message !== 'undefined') { %>
<h4 style="color: red;"><%= message %></h4>
<% } %>

<form action="/api/v1/register/login" method="post" enctype="application/x-www-form-urlencoded">
  <input type="email" name="email" placeholder="Enter Email" required>
  <br><br>
  <input type="password" name="password" placeholder="Enter Password" required>
  <br><br>
  <SPAN><input type="submit" value="login">
    <a href="/api/v1/register/">
      <button type="button">Register</button>
    </a>
    <a href="/api/v1/register/verify-user">
      <button type="button"> Verify Email </button>
    </a>
  </SPAN>
</form>


<%- include('layouts/footer.ejs'); %>
</body>

</html>